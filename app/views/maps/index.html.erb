<% if user_signed_in? %>
	<div id="map-list">
		<h1><%= current_user.name.capitalize %>'s Maps</h1>
		<div id="navcontainer">
			<ul class="maps">
				<% @maps.each do |map| %>
					<li class="maplist">
		  				<ul class="mapstats">
		  					<li class="waypoints"><%= " ( "+pluralize( map.point_counts, "waypoint")+" ) " %></li>
		  				</ul>
						<h3><%=link_to map.name, map %></h3>
						<div class="mapbody">
							<div class="mapspace"></div>
							<p class="remove-map"><%= link_to 'Delete', map, :method => :delete, :confirm => 'Are you sure?', :class => "red awesome small button" %></p>
							<div class="clearfix"></div>
						</div>
		 			</li>		  
				<% end %>
			</ul>
		</div>
		
		<br />
	
		<p><%= link_to 'New Map!', new_user_map_path(current_user), :class => 'new-map orange awesome button' %></p>
	</div>
<% else %>
	<div id="welcome">
		<h2>Welcome! <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %> to start creating maps</h2>
	</div>
<% end%>